# Local environment variables example
#
# --- Postgres
# Database name
POSTGRES_DB=slidekick
# Database user
POSTGRES_USER=slidekick



# --- Application settings
# The Settings class in `backend/app/config.py` defines defaults.  Any
# environment variable that starts with `SLIDEKICK_` (or the `.env` file)
# will override those defaults.

# Database vars
SLIDEKICK_DB_HOST=localhost             # Hostname or IP for Postgres (default: localhost)
SLIDEKICK_DB_PORT=5432                  # Postgres port (default: 5432)
SLIDEKICK_DB_USER=slidekick             # DB username used by the app
SLIDEKICK_DB_NAME=slidekick             # Database name

# CHANGE THIS!!!!!!
POSTGRES_PASSWORD=slidekick_secret # DB password for Postgres
SLIDEKICK_DB_PASSWORD=slidekick_secret  # DB password used by the app (keep in sync with POSTGRES_PASSWORD)

# App-level settings
SLIDEKICK_DEBUG=false                   # When true: SQLAlchemy emits SQL/param logs (very verbose)
SLIDEKICK_APP_NAME=Slidekick            # Application name

# Slide storage / WSI defaults
SLIDEKICK_SLIDES_DIR=slides       # Directory where WSI files are stored
SLIDEKICK_DEFAULT_MPP=0.25        # Fallback when slide metadata missing

# HoVerNet / inference settings
# Which model to use by default (tiatoolbox model name)
SLIDEKICK_HOVERNET_MODEL=hovernet_fast-pannuke

# Device override for torch: 'mps', 'cuda', 'cpu'
SLIDEKICK_DEVICE=                  # Leave empty to auto-detect (mps -> cuda -> cpu)

# Tile / batch tuning for inference (adjust for your GPU / memory)
SLIDEKICK_TILE_SIZE=256           # Default tile size (px) used by HoVserNet
SLIDEKICK_BATCH_SIZE=8            # Batch size for model inference

# If true, allow loading model weights even when the loader used an
# unsafe torch.load (unpickling risk). Use only if you trust the files.
SLIDEKICK_ALLOW_UNTRUSTED_MODEL_LOAD=false

# CORS
SLIDEKICK_CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# Reduce logging noise from albumentations 
NO_ALBUMENTATIONS_UPDATE=1

